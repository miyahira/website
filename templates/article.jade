
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)

block content
  article.article
    if page.metadata.appstore
      a(href=page.metadata.appstore)
        img.badge(src='/images/appstore.png')
    if page.metadata.googleplay
      a(href=page.metadata.googleplay)
        img.badge(src='/images/googleplay.png')
    img.icon(src=page.metadata.icon)
    section.content!= typogr(page.html).typogrify()

